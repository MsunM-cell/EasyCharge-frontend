page {
  background-color: #ffffff;
}

.logo {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15vh;
  margin-bottom: 10vh;
}

.logo image {
  width: 40vw;
}

.identity-view {
  display: flex;
  justify-content: center;
  font-weight: bold;
  font-size: 44rpx;
  margin-bottom: 5vh;
}

.info {
  padding: 1rpx 30rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info input {
  color: #555;
  background-color: #f5f5f5;
  font-size: 32rpx;
  height: 80rpx;
  width: 60vw;
  padding: 20rpx;
  border-radius: 10rpx;
}

.info>text[class*="cuIcon-"] {
  font-size: 40rpx;
}

.login-btn {
  display: flex;
  justify-content: center;
  margin-top: 5vh;
}